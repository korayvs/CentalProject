@model Booking
@*
    _DefaultBookingComponent
*@

<h4 class="text-white mb-4">REZERVASYON YAPIN</h4>
<form asp-controller="Default" asp-action="BookingCar" method="post">
    <div class="row g-3">
        <div class="col-12">
            <select asp-for="CarId" class="form-select">
                <option selected>Araç Seçin</option>
                @foreach (var car in ViewBag.carList)
                {
                    <option value="@car.Value">@car.Text</option>
                }
            </select>
        </div>
        <div class="col-12">
            <div class="input-group">
                <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                    <span class="fas fa-map-marker-alt"></span> <span class="ms-1">Alış Yeri</span>
                </div>
                <input asp-for="PickUpLocation" class="form-control" type="text" placeholder="Şehir, bölge veya havaalanı girin" aria-label="Şehir, bölge veya havaalanı girin">
            </div>
        </div>
        <div class="col-12">
            <a href="#" class="text-start text-white d-block mb-2">Farklı bir yere mi bırakmak istiyorsunuz?</a>
            <div class="input-group">
                <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                    <span class="fas fa-map-marker-alt"></span><span class="ms-1">İade Yeri</span>
                </div>
                <input asp-for="DropOffLocation" class="form-control" type="text" placeholder="Şehir, bölge veya havaalanı girin" aria-label="Şehir, bölge veya havaalanı girin">
            </div>
        </div>
        <div class="col-12">
            <div class="input-group">
                <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                    <span class="fas fa-calendar-alt"></span><span class="ms-1">Alış Tarihi</span>
                </div>
                <input asp-for="PickUpDate" class="form-control" type="date" min="2025-01-01" value="2025-01-01">
            </div>
        </div>
        <div class="col-12">
            <div class="input-group">
                <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                    <span class="fas fa-calendar-alt"></span><span class="ms-1">İade Tarihi</span>
                </div>
                <input asp-for="DropOffDate" class="form-control" type="date" min="2025-01-01" value="2025-01-01">
            </div>
        </div>
        <div>
            @Html.ValidationSummary()
        </div>
        <div class="col-12">
            <button onclick="booking()" class="btn btn-light w-100 py-2">Şimdi Rezervasyon Yap</button>
        </div>
    </div>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const isAuthenticated = @ViewBag.UserAuthenticated.ToString().ToLower(); 

        document.querySelector("form").addEventListener("submit", function (event) {
            event.preventDefault(); 

            if (!isAuthenticated) {
                Swal.fire({
                    title: "Giriş Yapmanız Gerekiyor",
                    text: "Lütfen rezervasyon yapmadan önce giriş yapın.",
                    icon: "error",
                    confirmButtonText: "Tamam"
                });
                return; 
            }

            Swal.fire({
                title: "Rezervasyonunuzu göndermek ister misiniz?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, gönder",
                cancelButtonText: "Hayır, vazgeç"
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: "Başarılı!",
                        text: "Rezervasyonunuz bize ulaştı, en kısa zamanda geri dönüş yapılacaktır.",
                        icon: "success"
                    }).then(() => {
                        event.target.submit(); 
                    });
                }
            });
        });
    });
</script>
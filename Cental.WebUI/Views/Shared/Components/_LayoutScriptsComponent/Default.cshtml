<script>
    // Kullanıcı giriş yapmışsa
    var isLoggedIn = true; // Bu değeri oturum durumuna göre dinamik olarak ayarlayın

    if (isLoggedIn) {
        document.getElementById('btn-uye-ol').style.display = 'none'; // Üye Ol butonunu gizle
        document.getElementById('btn-giris-yap').textContent = 'Çıkış Yap'; // Giriş Yap butonunu Çıkış Yap olarak değiştir
        document.getElementById('btn-giris-yap').setAttribute('href', '/Login/Logout'); // Çıkış yapacak linki ayarla
    } else {
        document.getElementById('btn-uye-ol').style.display = 'inline-block'; // Üye Ol butonunu göster
        document.getElementById('btn-giris-yap').textContent = 'Giriş Yap'; // Giriş Yap butonunu Giriş Yap olarak değiştir
        document.getElementById('btn-giris-yap').setAttribute('href', '/Login/Index'); // Giriş yapacak linki ayarla
    }
</script>
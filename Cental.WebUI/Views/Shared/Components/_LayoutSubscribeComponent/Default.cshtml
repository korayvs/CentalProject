@model UserRegisterDto
@*
    _LayoutSubscribeComponent
*@

<div class="position-relative">

    <form asp-action="Singup" method="post">
        <div class="card-body">
            <h4 class="f-w-400">Kayıt Formu</h4>
            <hr>
            <div class="form-group mb-3">
                <input type="text" class="form-control" asp-for="FirstName" placeholder="Adınız" required>
            </div>
            <div class="form-group mb-3">
                <input type="text" class="form-control" asp-for="LastName" placeholder="Soyadınız" required>
            </div>
            <div class="form-group mb-3">
                <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı" required>
            </div>
            <div class="form-group mb-3">
                <input type="email" class="form-control" asp-for="Email" placeholder="Email Adresi" required>
            </div>
            <div class="form-group mb-4">
                <input type="password" class="form-control" asp-for="Password" placeholder="Şifre" required>
            </div>
            <div class="form-group mb-4">
                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Şifreyi Doğrulayın" required>
            </div>

            <p style="color:#ff0000">
                @Html.ValidationSummary()
            </p>

            <button class="btn btn-primary btn-block mb-4" type="submit">Kayıt Ol</button>
            <hr>
            <p class="mb-2">Zaten bir hesabın var mı? <a href="/Login/Index" class="f-w-400">Giriş Yap</a></p>
        </div>
    </form>

</div>
@model ContactInfo
@*
    _LayoutFooterComponent
*@

<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <div class="footer-item">
                        <h4 class="text-white mb-4">Üye olmak ister misiniz?</h4>
                        @* <p class="mb-3">Dolor amet sit justo amet elitr clita ipsum elitr est.Lorem ipsum dolor sit amet, consectetur adipiscing elit consectetur adipiscing elit.</p> *@
                    </div>
                    <div class="position-relative">
                        <input disabled class="form-control rounded-pill w-100 py-3 ps-4 pe-5" type="text" placeholder="Buraya tıkla ve...">
                        <button onclick="window.location.href='/Register/Signup';" type="button" class="btn btn-secondary rounded-pill position-absolute top-0 end-0 py-2 mt-2 me-2">Üye Ol</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Hızlı Erişim</h4>
                    <a href="/About/Index"><i class="fas fa-angle-right me-2"></i> About</a>
                    <a href="/Cars/Index"><i class="fas fa-angle-right me-2"></i> Cars</a>
                    <a href="/Service/Index"><i class="fas fa-angle-right me-2"></i> Hizmetler</a>
                    <a href="/Contact/Index"><i class="fas fa-angle-right me-2"></i> İletişim</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Çalışma Saatleri</h4>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Pzt - Cuma:</h6>
                        <p class="text-white mb-0">@Model.OpeningHours</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Cumartesi:</h6>
                        <p class="text-white mb-0">@Model.ClosingHours</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Tatil:</h6>
                        <p class="text-white mb-0">Pazar günleri kapalıyız</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">İletişim Bilgileri</h4>
                    <a href="https://maps.app.goo.gl/hF62ine6QYz5ZvA57" target="_blank"><i class="fa fa-map-marker-alt me-2"></i> @Model.Location</a>
                    <a href="mailto:info@example.com"><i class="fas fa-envelope me-2"></i> @Model.Email</a>
                    <a href="tel:+012 345 67890"><i class="fas fa-phone me-2"></i> @Model.PhoneNumber1</a>
                    <a href="tel:+012 345 67890" class="mb-3"><i class="fas fa-print me-2"></i> @Model.PhoneNumber2</a>
                    <div class="d-flex">
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href=" @Model.SocialMedia1 "><i class="fab fa-facebook-f text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href=" @Model.SocialMedia2 "><i class="fab fa-twitter text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href=" @Model.SocialMedia3 "><i class="fab fa-instagram text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-0" href=" @Model.SocialMedia4 "><i class="fab fa-linkedin-in text-white"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
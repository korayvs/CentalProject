@model PagedList<ResultBookingDto>
@{
    ViewData["Title"] = "Rezervasyonlar";
    Layout = "~/Areas/Manager/Views/ManagerLayout/Index.cshtml";
    int count = (Model.PageNumber - 1) * Model.PageSize;
}

<table class="table table-bordered">
    <tr>
        <th style="width: 1%">#</th>
        <th>Seçilen Araç</th>
        <th>Alış Yeri</th>
        <th>İade Yeri</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th style="width: 5%">Durum</th>
        <th style="width: 5%">Durumu Değiştir</th>
        <th style="width: 8%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Car.Brand.BrandName @item.Car.ModelName @item.Car.Year</td>
            <td>@item.PickUpLocation</td>
            <td>@item.DropOffLocation</td>
            <td>@item.PickUpDate.ToShortDateString()</td>
            <td>@item.DropOffDate.ToShortDateString()</td>
            <td>
                @if (item.IsApproved == true)
                {
                    <span class="badge badge-success">Onaylandı</span>
                }
                else if (item.IsApproved == false)
                {
                    <span class="badge badge-danger">Reddedildi</span>
                }
                else
                {
                    <span class="badge badge-warning">Beklemede</span>
                }
            </td>
            <td>
                <a class="btn btn-outline-success btn-sm" asp-action="ApproveRezervation" asp-controller="Booking" asp-route-id="@item.BookingId">Onayla</a>
                <a class="btn btn-outline-danger btn-sm" asp-action="DeclineRezervation" asp-controller="Booking" asp-route-id="@item.BookingId">Reddet</a>
                <a class="btn btn-outline-warning btn-sm" asp-action="WaitingRezervation" asp-controller="Booking" asp-route-id="@item.BookingId">Beklemeye Al</a>
            </td>

            <td>
                <button onclick="delBooking(@item.BookingId)" class="btn btn-danger btn-sm">Sil</button>
                <a asp-action="UpdateRezervation" asp-route-id="@item.BookingId" class="btn btn-info btn-sm">Güncelle</a>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <pager asp-action="Index" asp-controller="Booking" asp-area="Manager" list="@Model"></pager>
</div>

<a asp-action="CreateRezervation" asp-controller="Booking" class="btn btn-primary">Yeni Rezervasyon Ekle</a>

<script>

    function delBooking(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Manager/Booking/DeleteRezervation/" + id
      }
    });

    }

</script>
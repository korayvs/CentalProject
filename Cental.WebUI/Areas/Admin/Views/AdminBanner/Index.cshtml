@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Öne Çıkan Alan";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">

    <tr>
        <th style="width:1%">#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th style="width:8%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" /> </td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <button onclick="delBanner(@item.BannerId)" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                <a asp-action="UpdateBanner" asp-area="Admin" asp-route-id="@item.BannerId" class="btn btn-info"><i class="fa fa-pen"></i></a>
            </td>
        </tr>
    }

</table>

<a asp-action="CreateBanner" asp-controller="AdminBanner" asp-area="Admin" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Öne Çıkan Alan Ekle</a>

<script>

    function delBanner(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminBanner/DeleteBanner/" + id
      }
    });

    }

</script>
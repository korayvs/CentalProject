@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

<table class="table table-bordered">
    <tr>
        <th style="width:1%">#</th>
        <th>Simgesi</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th style="width:5%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><i class="@item.Icon"></i></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <button onclick="delService(@item.ServiceId)" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                <a asp-action="UpdateService" asp-route-id="@item.ServiceId" class="btn btn-info btn-sm"><i class="fa fa-pen"></i></a>
            </td>
        </tr>
    }
</table>

<a asp-action="CreateService" asp-controller="AdminService" asp-area="Admin" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Hizmet Ekle </a>

<script>

    function delService(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminService/DeleteService/" + id
      }
    });

    }

</script>
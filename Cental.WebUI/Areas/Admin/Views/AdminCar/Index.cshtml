@model PagedList<ResultCarDto>
@{
    ViewData["Title"] = "Arabalar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = (Model.PageNumber - 1) * Model.PageSize;
}

<table class="table table-bordered">
    <tr>
        <th style="width:1%">#</th>
        <th>Resim</th>
        <th>Marka</th>
        <th>Model Adı</th>
        <th>Model Yılı</th>
        <th>Kilometre</th>
        <th style="width:5%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:100px; width:150px" /></td>
            <td>@item.Brand.BrandName</td>
            <td>@item.ModelName</td>
            <td>@item.Year</td>
            <td>@item.Kilometer</td>
            <td>
                <button onclick="delCar(@item.CarId)" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                <a asp-action="UpdateCar" asp-route-id="@item.CarId" class="btn btn-info btn-sm"><i class="fa fa-pen"></i></a>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <pager asp-action="Index" asp-controller="AdminCar" asp-area="Admin" list="@Model"></pager>
</div>

<a asp-action="CreateCar" asp-controller="AdminCar" asp-area="Admin" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Araba Ekle </a>

<script>

    function delCar(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminCar/DeleteCar/" + id
      }
    });

    }

</script>
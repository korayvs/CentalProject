@model PagedList<ResultReviewDto>
@{
    ViewData["Title"] = "Araç Değerlendirmeleri";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = (Model.PageNumber - 1) * Model.PageSize;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />


<table class="table table-bordered">
    <tr>
        <th style="width:1%">#</th>               
        <th style="width:15%">Araç Resmi</th>
        <th>Araç Bilgileri</th>
        <th style="width:10%">Puan</th>
        <th>Kullanıcı Adı Soyadı</th>
        <th style="width:5%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>                        
            <td><img src="@item.Car.ImageUrl" style="height:100px; width:150px" /></td>
            <td>@item.Car.Brand.BrandName @item.Car.ModelName @item.Car.Year</td>
            <td>
                @item.Rating / 5
                <br />
                @for (int i = 1; i <= item.Rating; i++)
                {
                    <i class="fa-solid fa-star"></i>
                }
                @for (int i = 1; i <= (5 - item.Rating); i++)
                {
                    <i class="fa-regular fa-star"></i>
                }
            </td>
            <td>@item.User.FirstName @item.User.LastName</td>
            <td>
                <button onclick="delReview(@item.ReviewId)" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                <a asp-action="UpdateReview" asp-route-id="@item.ReviewId" class="btn btn-info btn-sm"><i class="fa fa-pen"></i></a>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <pager asp-action="Index" asp-controller="AdminReview" asp-area="Admin" list="@Model"></pager>
</div>

<a asp-action="CreateReview" asp-controller="AdminReview" asp-area="Admin" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Araç Değerlendir </a>

<script>

    function delReview(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminReview/DeleteReview/" + id
      }
    });

    }

</script>
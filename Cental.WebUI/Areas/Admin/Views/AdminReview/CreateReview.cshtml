@model CreateReviewDto
@{
    ViewData["Title"] = "Araç Değerlendirme - Puanlama";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <label>Kullanıcı Seçin</label>
    <select asp-for="UserId" asp-items="@ViewBag.userList" class="form-control">
        <option selected disabled>Puanı verecek kullanıcıyı seçin</option>
    </select>
    <br />
    <label>Arabanızı Seçin</label>
    <select asp-for="CarId" asp-items="@ViewBag.carList" class="form-control">
        <option selected disabled>Puan vermek istediğiniz aracı seçin</option>
    </select>
    <br />    
    <label>Puan Verin</label>
    <select asp-for="Rating" class="form-control">
        <option selected>Puan seçin</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <br />

    <button class="btn btn-outline-primary"><i class="fa fa-save"></i> Kaydet </button>

</form>
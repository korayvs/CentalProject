@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Müşteri Yorumları";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />


<table class="table table-bordered">
    <tr>
        <th style="width:1%">#</th>
        <th style="width:13%">Resim</th>
        <th>Ad Soyad</th>
        <th>Ünvan</th>
        <th style="width:10%">Paun</th>
        <th>Yorum</th>
        <th style="width:5%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:100px; width:100px" /></td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>
                @item.Review / 5
                <br />
                @for (int i = 1; i <= item.Review; i++)
                {
                    <i class="fa-solid fa-star"></i>
                }
                @for (int i = 1; i <= (5 - item.Review); i++)
                {
                    <i class="fa-regular fa-star"></i>
                }
            </td>
            <td>@(item.Comment.Length > 30 ? item.Comment.Substring(0, 30) + "..." : item.Comment) </td>
            <td>
                <button onclick="delTestimonial(@item.TestimonialId )" class="btn btn-danger ">Sil</button>
                <a asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialId" class="btn btn-info ">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-action="CreateTestimonial" asp-controller="AdminTestimonial" asp-area="Admin" class="btn btn-primary"> Yeni Müşteri Yorumu Ekle </a>

<script>

    function delTestimonial(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminTestimonial/DeleteTestimonial/" + id
      }
    });

    }

</script>
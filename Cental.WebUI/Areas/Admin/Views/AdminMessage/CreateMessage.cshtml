@model CreateMessageDto
@{
    ViewData["Title"] = "Yeni Mesaj Ekle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <label>Ad Soyad</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>E posta</label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="Subject" class="form-control" />
    <br />
    <label>Mesaj</label>
    <input type="text" asp-for="MessageContent" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Kaydet</button>

</form>
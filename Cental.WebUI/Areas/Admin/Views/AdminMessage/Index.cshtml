@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">

    <tr>
        <th style="width:1%">#</th>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Konu</th>
        <th style="width:8%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>
                <a asp-action="DetailMessage" asp-area="Admin" asp-route-id="@item.MessageId" class="btn btn-dark">Detaylar</a>
                <button onclick="delMessage(@item.MessageId)" class="btn btn-danger"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
    }

</table>

<a asp-action="CreateMessage" asp-controller="AdminMessage" asp-area="Admin" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Mesaj Ekle </a>

<script>

    function delMessage(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminMessage/DeleteMessage/" + id
      }
    });

    }

</script>
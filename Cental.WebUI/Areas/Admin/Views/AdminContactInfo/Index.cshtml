@model List<ContactInfo>
@{
    ViewData["Title"] = "İletişim Bilgileri";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th style="width:1%">#</th>
        <th>Konum</th>
        <th>E posta</th>
        <th>Telefon Numarası - 1</th>        
        <th>Telefon Numarası - 2</th>        
        <th>Sosyal Medya - 1</th>        
        <th>Sosyal Medya - 2</th>        
        <th>Sosyal Medya - 3</th>        
        <th>Sosyal Medya - 4</th>       
        <th>Açılış Saati</th>       
        <th>Kapanış Saati</th>       
        <th style="width:5%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Location</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber1</td>            
            <td>@item.PhoneNumber2</td>            
            <td>@item.SocialMedia1</td>            
            <td>@item.SocialMedia2</td>            
            <td>@item.SocialMedia3</td>            
            <td>@item.SocialMedia4</td>            
            <td>@item.OpeningHours</td>            
            <td>@item.ClosingHours</td>            
            <td>
                <button onclick="delInfo(@item.ContactInfoId)" class="btn btn-danger btn-sm">Sil</button>
                <a asp-action="UpdateContactInfo" asp-route-id="@item.ContactInfoId" class="btn btn-info btn-sm">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-action="CreateContactInfo" asp-controller="AdminContactInfo" asp-area="Admin" class="btn btn-primary"> Yeni Bilgi Ekle </a>

<script>

    function delInfo(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminContactInfo/DeleteContactInfo/" + id
      }
    });

    }

</script>
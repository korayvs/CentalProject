@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Vizyon</th>
        <th>Misyon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Vision</td>
            <td>@item.Mission</td>
            <td><button onclick="delAbout(@item.AboutId)" class="btn btn-danger">Sil</button></td>
            <td><a asp-action="UpdateAbout" asp-area="Admin" asp-route-id="@item.AboutId" class="btn btn-info">Güncelle</a> </td>
        </tr>
    }
</table>

<a asp-action="CreateAbout" asp-controller="AdminAbout" asp-area="Admin" class="btn btn-primary">Yeni Hakkımızda Ekle</a>

<script>

    function delAbout(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminAbout/DeleteAbout/" + id
      }
    });

    }

</script>
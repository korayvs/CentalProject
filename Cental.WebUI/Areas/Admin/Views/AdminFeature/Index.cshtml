@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Özellikler";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th style="width:1%">#</th>
        <th style="width:3%">Simge</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th style="width:8%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><i class="@item.Icon"></i></td>
            <td>@item.Title</td>
            <td>@(item.Description.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description) </td>
            <td>
                <button onclick="delFeature(@item.FeatureId)" class="btn btn-danger btn-sm">Sil</button>
                <a asp-action="UpdateFeature" asp-route-id="@item.FeatureId" class="btn btn-info btn-sm">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-action="CreateFeature" asp-controller="AdminFeature" asp-area="Admin" class="btn btn-primary"> Yeni Özellik Ekle </a>

<script>

    function delFeature(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminFeature/DeleteFeature/" + id
      }
    });

    }

</script>
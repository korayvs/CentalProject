@model UpdateFeatureDto
@{
    ViewData["Title"] = "Özellik Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="FeatureId" />
    <label>Simgesi</label>
    <input type="text" asp-for="Icon" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-info"><i class="fa fa-save"></i> Güncelle </button>

</form>
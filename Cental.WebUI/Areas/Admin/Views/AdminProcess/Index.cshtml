@model List<ResultProcessDto>
@{
    ViewData["Title"] = "Süreç Bilgileri";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">

    <tr>
        <th style="width:1%">#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th style="width:8%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <button onclick="delProcess(@item.ProcessId)" class="btn btn-danger btn-sm">Sil</button>
                <a asp-action="UpdateProcess" asp-route-id="@item.ProcessId" class="btn btn-info btn-sm">Güncelle</a>
            </td>
        </tr>
    }

</table>

<a asp-action="CreateProcess" asp-controller="AdminProcess" asp-area="Admin" class="btn btn-primary">Yeni Süreç Ekle</a>

<script>

    function delProcess(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/Admin/AdminProcess/DeleteProcess/" + id
      }
    });

    }

</script>
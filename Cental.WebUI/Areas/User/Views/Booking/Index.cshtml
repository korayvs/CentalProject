@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Rezervasyonlarım";
    Layout = "~/Areas/User/Views/UserLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th style="width: 1%">#</th>
        <th>Seçilen Araç</th>
        <th>Alış Yeri</th>
        <th>İade Yeri</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th style="width: 5%">Durum</th>
        <th style="width: 8%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Car.Brand.BrandName @item.Car.ModelName @item.Car.Year</td>
            <td>@item.PickUpLocation</td>
            <td>@item.DropOffLocation</td>
            <td>@item.PickUpDate.ToShortDateString()</td>
            <td>@item.DropOffDate.ToShortDateString()</td>
            <td>
                @if (item.IsApproved == true)
                {
                    <span class="badge badge-success">Onaylandı</span>
                }
                else if (item.IsApproved == false)
                {
                    <span class="badge badge-danger">Reddedildi</span>
                }
                else
                {
                    <span class="badge badge-warning">Beklemede</span>
                }
            </td>
            <td>
                <button onclick="delBooking(@item.BookingId)" class="btn btn-danger btn-sm">Sil</button>
                <a asp-action="UpdateRezervation" asp-controller="Booking" asp-area="User" asp-route-id="@item.BookingId" class="btn btn-info btn-sm">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-action="CreateRezervation" asp-controller="Booking" asp-area="User" class="btn btn-primary">Yeni Rezervasyon Oluştur</a>


<script>

    function delBooking(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/User/Booking/DeleteRezervation/" + id
      }
    });

    }

</script>
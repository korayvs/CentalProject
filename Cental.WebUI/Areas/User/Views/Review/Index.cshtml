@model List<Review>
@{
    ViewData["Title"] = "Araç Değerlendirmelerim";
    Layout = "~/Areas/User/Views/UserLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th style="width: 1%">#</th>
        <th>Seçilen Araç</th>
        <th>Puan</th>
        <th style="width: 8%">İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Car.Brand.BrandName @item.Car.ModelName @item.Car.Year</td>
            <td>@item.Rating / 5</td>
            <td>
                <button onclick="deleteReview(@item.ReviewId)" class="btn btn-danger btn-sm">Sil</button>
                <a asp-action="UpdateReview" asp-route-id="@item.ReviewId" class="btn btn-info btn-sm">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-action="CreateReview" asp-controller="Review" class="btn btn-primary">Yeni Araç Değerlendir</a>

<script>

    function deleteReview(id){

            Swal.fire({
      title: "Silmek istediğinize emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, Sil!",
      cancelButtonText: "İptal Et"
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/User/Review/DeleteReview/" + id
      }
    });

    }

</script>
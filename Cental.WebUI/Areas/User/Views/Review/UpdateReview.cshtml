@model UpdateReviewDto
@{
    ViewData["Title"] = "Araç Puanı Güncelleme";
    Layout = "~/Areas/User/Views/UserLayout/Layout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="ReviewId"/>
    <input type="hidden" asp-for="UserId"/>

    <label>Puan Verin</label>
    <select asp-for="Rating" class="form-control">
        <option selected>Puan seçin</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <br />
    <label>Arabanızı Seçin</label>
    <select asp-for="CarId" asp-items="@ViewBag.carList" class="form-control">
        <option selected disabled>Puan vermek istediğiniz aracı seçin</option>
    </select>
    <br />

    <button class="btn btn-outline-info"> Güncelle </button>

</form>